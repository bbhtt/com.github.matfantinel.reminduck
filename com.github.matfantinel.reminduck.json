{
    "app-id": "com.github.matfantinel.reminduck",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-19.08",
    "command": "com.github.matfantinel.reminduck",
    "finish-args": [
       "--share=ipc",
       "--share=network",
       "--socket=x11",
       "--socket=wayland",
       "--talk-name=org.gtk.vfs.*",
       "--filesystem=home"
    ],
    "cleanup": [
       "/include",
       "/lib/pkgconfig",
       "/man",
       "/share/doc",
       "/share/gtk-doc",
       "/share/man",
       "/share/pkgconfig",
       "/share/vala",
       "*.la",
       "*.a"
    ],
    "modules": [
       {
          "name": "libyaml",
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/yaml/libyaml.git",
                  "tag": "0.2.2",
                  "commit": "690a781ef6af70ce6749d6e2be91743345123998"
              }
          ]
       },
       {
          "name": "appstream",
          "buildsystem": "meson",
          "config-opts": [
              "-Dstemming=false"
          ],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/ximion/appstream.git",
                  "tag": "v0.12.9",
                  "commit": "d77cc0f331ff5d3bd43be104106a94ed201c62ec"
              }
          ]
       },
       {
          "name": "reminduck",
          "buildsystem": "meson",
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/matfantinel/reminduck.git",
                  "tag": "v1.5.1",
                  "commit": "37e91eaed2ceadc617f4bc078b72070c2780a3b1"
              }
          ]
        }
    ]
 }
 